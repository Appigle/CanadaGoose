{
  "name": "client",
  "version": "0.1.14",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/update-version-config.js && vite",
    "prebuild": "node scripts/pre-build-direct.js && node scripts/update-version-config.js",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:prod": "npm run prebuild && NODE_ENV=production vite build",
    "build:version": "node scripts/version-update.js",
    "build:version:patch": "node scripts/version-update.js --patch --auto",
    "build:version:minor": "node scripts/version-update.js --minor --auto",
    "build:version:major": "node scripts/version-update.js --major --auto",
    "version:interactive": "node scripts/interactive-version.js",
    "version:patch": "node scripts/interactive-version.js --patch --auto",
    "version:minor": "node scripts/interactive-version.js --minor --auto",
    "version:major": "node scripts/interactive-version.js --major --auto",
    "version:check": "node scripts/check-version.js",
    "preview": "vite preview",
    "preview:prod": "vite preview --port 4173 --host",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "cypress:open": "VITE_DISABLE_DEVTOOLS=true cypress open",
    "cypress:run": "VITE_DISABLE_DEVTOOLS=true cypress run",
    "deploy": "npm run build:prod && echo 'âœ… Production build complete. Upload dist/ folder to your server.'",
    "deploy:aws": "./deploy",
    "deploy:build": "./deploy build",
    "deploy:local": "./scripts/build-production.sh",
    "deploy:full": "./scripts/deploy-to-aws.sh"
  },
  "dependencies": {
    "@vueuse/core": "^13.5.0",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.525.0",
    "pinia": "^3.0.3",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.17.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.2.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.1",
    "eslint": "^9.29.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-vue": "~10.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  }
}
